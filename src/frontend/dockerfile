# Estágio 1: Build da Aplicação Angular
FROM node:20-alpine AS build

WORKDIR /app

# Copia apenas os arquivos de dependência primeiro (para cache do Docker)
COPY package.json package-lock.json ./

# Instalação limpa (CI)
RUN npm ci

# Copia o código fonte
COPY . .

# Build de produção
RUN npm run build -- --configuration production

# Estágio 2: Servidor Nginx para rodar a aplicação
FROM nginx:alpine

# Remove configurações padrão do Nginx
RUN rm /etc/nginx/conf.d/default.conf

# Copia nossa configuração customizada
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Copia os artefatos do build do Angular para o diretório do Nginx
COPY --from=build /app/dist/kanban-pge-ce/browser /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]